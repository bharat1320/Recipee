<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/chip_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/short_margin"
        android:layout_margin="@dimen/dp_2"
        app:cardBackgroundColor="@color/chip_background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/short_margin">
            <TextView
                android:id="@+id/chip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/chip_text"
                android:text="@string/app_name"
                android:paddingVertical="@dimen/very_short_margin"
                android:paddingStart="@dimen/short_margin"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/chip_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingStart="@dimen/very_short_margin"
                android:src="@drawable/ic_black_add"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>