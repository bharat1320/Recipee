<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/home_cuisine_filter_constraint"
        style="@style/customDropDownMenu"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/border_margin"
        android:dropDownHeight="@dimen/cardview_compat_inset_shadow"
        android:inputType="none"
        app:layout_constraintEnd_toStartOf="@+id/home_shopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/home_cuisine_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownHeight="250dp"
            android:inputType="none"
            android:text="@string/cuisine"
            android:textSize="@dimen/text_size_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/home_sort_filter_constraint"
        style="@style/customDropDownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/border_margin"
        android:dropDownHeight="@dimen/cardview_compat_inset_shadow"
        android:inputType="none"
        app:layout_constraintEnd_toStartOf="@+id/home_shopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_cuisine_filter_constraint">

        <AutoCompleteTextView
            android:id="@+id/home_sort_filter"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:dropDownHeight="250dp"
            android:inputType="none"
            android:text="@string/sort"
            android:textSize="@dimen/text_size_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/home_shopping_image"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_shopping_cart"
        android:layout_marginTop="@dimen/very_large_margin"
        app:layout_constraintBottom_toTopOf="@+id/home_shopping"
        app:layout_constraintDimensionRatio="h,1"
        app:layout_constraintEnd_toEndOf="@+id/home_shopping"
        app:layout_constraintStart_toStartOf="@+id/home_shopping"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/border_margin"
        android:text="@string/shopping_list"
        android:textSize="@dimen/text_size_13sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/very_large_margin"
        app:layout_constraintBottom_toTopOf="@+id/home_news_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_shopping_image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_news_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/border_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_sort_filter_constraint"
        tools:listitem="@layout/rv_dish_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
